{
  "extends": "@docusaurus/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@site/*": ["./*"],
      "@components/*": ["./src/components/*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*", "docs/**/*"],
  "exclude": ["node_modules", "build"]
}
