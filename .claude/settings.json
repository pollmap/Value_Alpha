{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/plugins/marketplaces/thedotmack/claude-mem/scripts/smart-install.js\"",
            "timeout": 300
          },
          {
            "type": "command",
            "command": "bun \"$HOME/.claude/plugins/marketplaces/thedotmack/claude-mem/scripts/worker-service.cjs\" start",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "bun \"$HOME/.claude/plugins/marketplaces/thedotmack/claude-mem/scripts/worker-service.cjs\" hook claude-code context",
            "timeout": 60
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bun \"$HOME/.claude/plugins/marketplaces/thedotmack/claude-mem/scripts/worker-service.cjs\" hook claude-code observation",
            "timeout": 120
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun \"$HOME/.claude/plugins/marketplaces/thedotmack/claude-mem/scripts/worker-service.cjs\" hook claude-code summarize",
            "timeout": 120
          }
        ]
      }
    ]
  },
  "permissions": {
    "deny": [
      "Read(./node_modules/**)",
      "Read(./.DS_Store)"
    ]
  }
}
